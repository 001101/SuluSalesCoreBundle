<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Sulu\Bundle\Sales\CoreBundle\Entity\Item" table="sc_item" repository-class="Sulu\Bundle\Sales\CoreBundle\Entity\ItemRepository">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        <field name="name" type="string" column="name" length="255"/>
        <field name="number" type="string" column="number" length="255" nullable="true"/>
        <field name="quantity" type="float" column="quanity"/>
        <field name="quantityUnit" type="string" column="quanityUnit" length="60"/>
        <field name="useProductsPrice" type="boolean" column="useProductsPrice"/>
        <field name="tax" type="float" column="tax"/>
        <field name="price" type="float" column="price" nullable="true"/>
        <field name="discount" type="float" column="discount" nullable="true"/>
        <field name="description" type="text" column="description" nullable="true"/>
        <field name="weight" type="float" column="weight" nullable="true"/>
        <field name="width" type="float" column="width" nullable="true"/>
        <field name="height" type="float" column="height" nullable="true"/>
        <field name="length" type="float" column="length" nullable="true"/>
        <field name="supplierName" type="string" column="supplierName" length="255" nullable="true"/>
        <field name="created" type="datetime" column="created"></field>
        <field name="changed" type="datetime" column="changed"></field>

        <one-to-many field="attributes" target-entity="Sulu\Bundle\Sales\CoreBundle\Entity\ItemAttribute" mapped-by="item"/>

        <many-to-one field="status" target-entity="Sulu\Bundle\Sales\CoreBundle\Entity\ItemStatus" inversed-by="item">
            <join-columns>
                <join-column name="idItemStatus" referenced-column-name="id" nullable="false"/>
            </join-columns>
        </many-to-one>
        <many-to-one field="product" target-entity="Sulu\Bundle\ProductBundle\Entity\Product">
            <join-columns>
                <join-column name="idProducts" referenced-column-name="id" on-delete="SET NULL" nullable="true"/>
            </join-columns>
        </many-to-one>
        <many-to-one field="changer" target-entity="Sulu\Component\Security\UserInterface">
            <join-columns>
                <join-column name="idUsersChanger" referenced-column-name="id" on-delete="SET NULL" nullable="true"/>
            </join-columns>
        </many-to-one>
        <many-to-one field="creator" target-entity="Sulu\Component\Security\UserInterface">
            <join-columns>
                <join-column name="idUsersCreator" referenced-column-name="id" on-delete="SET NULL" nullable="true"/>
            </join-columns>
        </many-to-one>
    </entity>
</doctrine-mapping>
